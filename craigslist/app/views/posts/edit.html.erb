<h1>Edit <%= @post.title %></h1>

<%= form_for [@category, @post], method: :patch do |f| %>
<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<button><%= link_to 'Back', category_post_path(@post.category_id, @post) %></button>
